<%# Section 1 %>
<section class="dark:bg-gray-900">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 sm:py-12 lg:px-8">


    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <% @events.each do |event| %>
          <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <% if event.image_url.present? %>
              <%= image_tag event.image_url, alt: event.title, class: "w-full h-64 object-cover rounded" %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt: "Default Image", class: "w-full h-64 object-cover rounded" %>
            <% end %>
            <h2 class="text-2xl font-semibold mb-2"><%= link_to event.title, event %></h2>
            <p class="text-gray-600 mb-2"><%= event.description %></p>
            <p class="text-gray-600 mb-2"><%= event.location %></p>
            <p class="text-gray-600 mb-2"><%= event.date.strftime('%B %d, %Y') %></p>

            <% if user_signed_in? %>
              <% if current_user == event.user %>
                <div class="mt-4">
                  <%= link_to 'Edit', edit_event_path(event), class: "text-indigo-600 hover:text-indigo-700 mr-4" %>
                  <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-700" %>
                </div>
              <% else %>
                <% if event.bookings.where(user: current_user).exists? %>
                  <%= link_to 'Cancel Booking', event_booking_path(event, event.bookings.find_by(user: current_user)), method: :delete, class: "text-red-600 hover:text-red-700" %>
                <% else %>
                  <%= link_to 'Book Event', event_bookings_path(event), method: :post, class: "text-indigo-600 hover:text-indigo-700" %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
    </ul>
  </div>
</section>




