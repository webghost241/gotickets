<div class="container mx-auto px-4">
  <h1 class="text-3xl font-semibold mt-8 mb-4">Blog Posts</h1>

  <% @blog_posts.each do |post| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold mb-2"><%= link_to post.title, post %></h2>
      <p class="text-gray-600 mb-2"><%= truncate(post.content, length: 100) %></p>

      <% if user_signed_in? && current_user == post.user %>
        <div class="mt-4">
          <%= link_to 'Edit', edit_blog_post_path(post), class: "text-indigo-600 hover:text-indigo-700 mr-4" %>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-700" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'New Blog Post', new_blog_post_path, class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg mt-4 hover:bg-indigo-700" if user_signed_in? %>
</div>