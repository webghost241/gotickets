<div class="container mx-auto px-4">
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h1 class="text-3xl font-semibold mb-4"><%= @blog_post.title %></h1>
    <p class="text-gray-600 mb-4"><%= @blog_post.content %></p>
    <% if user_signed_in? && current_user == @blog_post.user %>
      <h1><%= @blog.title %></h1>
    <p><%= @blog.content %></p>

    <% if @blog.event %>
      <p>Related Event: <%= link_to @blog.event.title, @blog.event %></p>
    <% end %>
  
  <div class="mb-4">
    <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "text-indigo-600 hover:text-indigo-700 mr-4" %>
    <%= link_to 'Delete', @blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-700" %>
  </div>
<% end %>
  </div>
</div>